    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'bevy_automata_01'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=bevy_automata_01",
                    "--package=bevy_automata_01"
                ],
                "filter": {
                    "name": "bevy_automata_01",
                    "kind": "bin"
                },
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "PATH": "${env:RUSTUP_HOME}/toolchains/stable-x86_64-pc-windows-msvc/bin;${workspaceFolder}/target/debug/deps;${env:PATH}"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'bevy_automata_01'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=bevy_automata_01",
                    "--package=bevy_automata_01"
                ],
                "filter": {
                    "name": "bevy_automata_01",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
